<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_F5BF6B"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/comment_2_dip"
        android:paddingTop="@dimen/comment_5_dip"
        android:paddingRight="@dimen/comment_2_dip"
        android:paddingBottom="@dimen/comment_5_dip">

        <LinearLayout
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特惠价:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/comment_15_size"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF0000"
                    android:textSize="@dimen/comment_16_size"/>
            </LinearLayout>

            <TextView
                android:id="@+id/oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_3_dip"
                android:textColor="@color/special_list_item_first"
                android:textSize="@dimen/comment_12_size"/>
        </LinearLayout>

        <TextView
            android:id="@+id/buynow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/special_list_item_tv"
            android:gravity="center"
            android:paddingLeft="@dimen/comment_4_dip"
            android:paddingTop="@dimen/comment_2_dip"
            android:paddingRight="@dimen/comment_4_dip"
            android:paddingBottom="@dimen/comment_2_dip"
            android:text="立即\n购买"
            android:textColor="@color/color_FF0000"
            android:textSize="@dimen/comment_14_size"/>
    </LinearLayout>
</LinearLayout>