<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/comment_15_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_home_white"
        android:orientation="horizontal"
        android:padding="@dimen/comment_10_dip">

        <ImageView
            android:id="@+id/sort_fg_img"
            android:layout_width="@dimen/comment_100_dip"
            android:layout_height="@dimen/comment_100_dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sort_fg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:textColor="@color/home_bottom_radio_text"
                android:textSize="@dimen/comment_14_size"/>

            <TextView
                android:id="@+id/sort_fg_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lines="1"
                android:textColor="@color/color_565656"
                android:textSize="@dimen/comment_12_size"/>

            <com.ainisi.queenmirror.queenmirrorcduan.utils.CustomRatingBar
                android:id="@+id/sort_fg_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                app:mode="random"
                app:ratingProgress="4"
                app:starDistance="@dimen/comment_3_dip"
                app:starEmpty="@mipmap/empty"
                app:starFill="@mipmap/fill"
                app:starNum="5"
                app:starSize="@dimen/comment_10_dip"
                app:touchAble="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sort_fg_itme1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/comment_5_dip"
                    android:background="@drawable/shape_home_server"
                    android:gravity="center"
                    android:paddingLeft="@dimen/comment_6_dip"
                    android:paddingTop="@dimen/comment_2_dip"
                    android:paddingRight="@dimen/comment_6_dip"
                    android:paddingBottom="@dimen/comment_2_dip"
                    android:text="优惠券"
                    android:textColor="@color/home_back_two"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/sort_fg_itme2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/comment_5_dip"
                    android:background="@drawable/shape_home_server"
                    android:gravity="center"
                    android:paddingLeft="@dimen/comment_6_dip"
                    android:paddingTop="@dimen/comment_2_dip"
                    android:paddingRight="@dimen/comment_6_dip"
                    android:paddingBottom="@dimen/comment_2_dip"
                    android:text="魔豆"
                    android:textColor="@color/home_back_two"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/sort_fg_itme3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/comment_5_dip"
                    android:background="@drawable/shape_home_server"
                    android:gravity="center"
                    android:paddingLeft="@dimen/comment_6_dip"
                    android:paddingTop="@dimen/comment_2_dip"
                    android:paddingRight="@dimen/comment_6_dip"
                    android:paddingBottom="@dimen/comment_2_dip"
                    android:text="拼团"
                    android:textColor="@color/home_back_two"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/sort_fg_itme4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_home_server"
                    android:gravity="center"
                    android:paddingLeft="@dimen/comment_6_dip"
                    android:paddingTop="@dimen/comment_2_dip"
                    android:paddingRight="@dimen/comment_6_dip"
                    android:paddingBottom="@dimen/comment_2_dip"
                    android:text="特价"
                    android:textColor="@color/home_back_two"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/comment_11_dip"
                    android:layout_height="@dimen/comment_15_dip"
                    android:src="@drawable/hot"/>

                <View
                    android:id="@+id/sort_fg_view"
                    android:layout_width="@dimen/comment_70_dip"
                    android:layout_height="@dimen/comment_5_dip"
                    android:background="@drawable/sort_rol"
                    />

                <TextView
                    android:id="@+id/sort_fg_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/comment_5_dip"
                    android:textColor="@color/grey_color3"
                    android:textSize="@dimen/comment_11_size"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/sort_fg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/comment_2_dip"
                    android:includeFontPadding="false"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/sort_fg_numberimg"
        android:layout_width="@dimen/comment_25_dip"
        android:layout_height="@dimen/comment_30_dip"
        android:layout_marginLeft="@dimen/comment_5_dip"/>

    <TextView
        android:id="@+id/sort_fg_numbertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/comment_5_dip"
        android:layout_marginTop="@dimen/comment_4_dip"
        android:background="@drawable/shape_sort_tv"
        android:gravity="center"
        android:paddingLeft="@dimen/comment_5_dip"
        android:paddingTop="@dimen/comment_2_dip"
        android:paddingRight="@dimen/comment_5_dip"
        android:paddingBottom="@dimen/comment_2_dip"
        android:text="4名"
        android:textColor="@color/color_DDC399"
        android:textSize="@dimen/comment_12_size"/>
</RelativeLayout>