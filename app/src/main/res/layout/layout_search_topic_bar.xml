<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_16_dip"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_weight="0.8"
        android:background="@mipmap/icon_back"
        android:visibility="visible"

        />

    <LinearLayout

        android:layout_width="@dimen/comment_150_dip"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/shape_edittext_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_market_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:src="@mipmap/ic_market_search" />

        <EditText
            android:id="@+id/et_market_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/comment_10_dip"
            android:layout_weight="4"
            android:background="@color/home_line"
            android:hint="#魔镜魔镜，告诉我谁最美#"
            android:maxLines="1"
            android:textSize="@dimen/comment_12_size"

            />


    </LinearLayout>


    <ImageView
        android:id="@+id/iv_market_order_center"
        android:layout_width="0dp"


        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginRight="@dimen/comment_16_dip"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_weight="1"

        />
</LinearLayout>