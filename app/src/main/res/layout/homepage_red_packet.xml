<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:background="@color/tranparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_home_page_dissmiss"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/home_page_diss">
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginTop="40dp"
        android:background="@color/tranparent">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/mine_red_packet"/>

        <TextView
            android:id="@+id/tv_red_packet_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女王红包"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/comment_130_dip"
            android:textSize="@dimen/comment_16_size"
            android:textColor="@color/mine_red_packet_text">
        </TextView>

        <TextView
            android:id="@+id/tv_red_packet_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="最高可得"
            android:layout_below="@id/tv_red_packet_top"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/comment_30_dip"
            android:textSize="@dimen/comment_16_size"
            android:textColor="@color/mine_red_packet_text">
        </TextView>

        <LinearLayout
            android:id="@+id/li_red_packet_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_red_packet_more"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_red_packet_money_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@id/tv_red_packet_top"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/comment_52_size"
                android:textColor="@color/mine_red_packet_text">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/comment_24_size"
                android:layout_marginStart="5dp"
                android:textColor="@color/mine_red_packet_text">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_red_packet_bottom_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新人专享"
            android:gravity="center_horizontal"
            android:layout_below="@id/li_red_packet_middle"
            android:textSize="@dimen/comment_16_size"
            android:layout_marginTop="20dp"
            android:textColor="@color/mine_red_packet_text">
        </TextView>
    </RelativeLayout>

    <RelativeLayout android:layout_width="241dp"
        android:layout_height="56dp"
        android:background="@drawable/mine_red_packet_regist">
        <TextView
            android:id="@+id/tv_red_packet_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="@dimen/comment_16_size"
            android:textColor="@color/mine_red_packet_text"
            android:layout_centerInParent="true"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>



</LinearLayout>
