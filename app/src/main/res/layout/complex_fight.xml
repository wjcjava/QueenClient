<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/complex_fight"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/comment_5_dip"
        android:paddingTop="@dimen/comment_5_dip"
        android:paddingRight="@dimen/comment_10_dip"
        android:paddingBottom="@dimen/comment_5_dip">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fight_img"
            android:layout_width="@dimen/comment_18_dip"
            android:layout_height="@dimen/comment_18_dip"/>

        <TextView
            android:id="@+id/fight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_5_dip"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_11_size"
            />
    </LinearLayout>
</LinearLayout>