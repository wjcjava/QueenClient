<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/comment_10_dip"
            android:drawableLeft="@drawable/icon_alipay"
            android:drawablePadding="@dimen/comment_10_dip"
            android:gravity="center_vertical"
            android:text="支付宝支付" />

        <CheckBox
            android:id="@+id/cb_alipay"
            android:layout_width="@dimen/comment_25_dip"
            android:layout_height="@dimen/comment_25_dip"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/comment_10_dip"
            android:background="@null"
            android:checked="true"
            android:button="@null"
            android:clickable="true"
            android:drawableLeft="@drawable/checkbox_pay_style"
            android:drawablePadding="8dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/comment_10_dip"
            android:drawableLeft="@drawable/icon_submit_wechat"
            android:drawablePadding="@dimen/comment_10_dip"
            android:gravity="center_vertical"
            android:text="微信支付" />

        <CheckBox
            android:id="@+id/cb_wechat"
            android:layout_width="@dimen/comment_25_dip"
            android:layout_height="@dimen/comment_25_dip"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/comment_10_dip"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:clickable="true"
            android:drawableLeft="@drawable/checkbox_pay_style"
            android:drawablePadding="8dp" />


    </RelativeLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/comment_20_dip"
        android:background="@drawable/shape_corner_btn"
        android:id="@+id/btn_pay"
        android:text="确认支付 ¥0.01"
        android:textColor="@color/white"

        />

</LinearLayout>