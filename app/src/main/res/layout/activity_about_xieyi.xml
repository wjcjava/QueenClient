<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mine_back_gray"
              android:orientation="vertical"
              tools:context="com.ainisi.queenmirror.queenmirrorcduan.ui.mine.activity.AboutXieyiActivity">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:id="@+id/rl_xieyi_falv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法律声明"
            android:textColor="@color/alpha_85_black"
            android:textSize="@dimen/comment_14_size"
            android:padding="10dp">
        </TextView>
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_xieyi_yinsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:textColor="@color/alpha_85_black"
            android:textSize="@dimen/comment_14_size"
            android:padding="10dp">
        </TextView>
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_xieyi_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议"
            android:textColor="@color/alpha_85_black"
            android:textSize="@dimen/comment_14_size"
            android:padding="10dp">
        </TextView>
        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp">
        </ImageView>
    </RelativeLayout>

</LinearLayout>
