<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_gift"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/mine_fragment_gift"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="@string/gift"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_service"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/mine_fragment_kefu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="客服"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_beauty"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                android:src="@drawable/mine_fragment_meiye"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="成为美业人"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_mine_renzheng"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                android:src="@drawable/mine_fragment_renzheng"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="我要认证"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_about_us"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/mine_fragment_about"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="关于我们"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_problem"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/mine_fragment_help"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="帮助与反馈"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_big_classroom"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@mipmap/ic_big_classroom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="艾尼斯大课堂"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_big_classroom_tab"
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/comment_20_dip"
                android:layout_height="@dimen/comment_20_dip"
                android:layout_alignParentStart="true"
                app:srcCompat="@mipmap/ic_big_classroom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="观看记录"
                android:textColor="@color/alpha_95_black"
                android:textSize="@dimen/comment_12_size"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>