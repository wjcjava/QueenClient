<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/comment_40_dip"
        android:layout_height="@dimen/comment_40_dip"
        android:layout_marginLeft="@dimen/comment_15_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_marginBottom="@dimen/comment_15_dip"
        android:src="@drawable/icon_mine_homepager" />


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_15_dip"
                android:layout_marginLeft="@dimen/comment_10_dip"
                android:layout_toRightOf="@id/profile_image"
                android:text="嘤嘤嘤嘤嘤嘤在 图片：那个帮我做出阴影走出来的人已经...回复你" />





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_15_dip"

            android:padding="@dimen/comment_10_dip"
            android:layout_marginRight="@dimen/comment_10_dip"
            android:background="@color/right_time_color"
            android:gravity="center_vertical"
            android:text="emmmmmm"

            android:textColor="@color/black"
            android:textSize="@dimen/comment_12_size"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_15_dip"
            android:layout_marginBottom="@dimen/comment_10_dip"
            android:text="2018年10月26日11:12:56"
            android:textColor="@color/text_like"
            android:textSize="@dimen/comment_12_size"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/comment_15_dip"
        android:src="@drawable/icon_mine_homepager" />

    <View
        android:layout_marginLeft="@dimen/comment_45_dip"
        android:layout_width="match_parent"
        android:background="@color/view_list_line"

        android:layout_height="@dimen/comment_0.5_dip"></View>
</RelativeLayout>
