<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_48_dip"
        android:background="@color/white">

        <ImageView
            android:id="@+id/seckill_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/comment_10_dip"
            android:paddingTop="@dimen/comment_10_dip"
            android:paddingRight="@dimen/comment_10_dip"
            android:paddingBottom="@dimen/comment_10_dip"
            android:src="@mipmap/icon_back"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/seckill_title"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_282831">

        <android.support.design.widget.TabLayout
            android:id="@+id/seckill_tab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_45_dip"
            android:layout_centerInParent="true"
            android:background="@color/color_282831"
            app:tabBackground="@drawable/tab_background"
            app:tabIndicatorHeight="0dp">

        </android.support.design.widget.TabLayout>
    </RelativeLayout>

    <com.ainisi.queenmirror.queenmirrorcduan.utils.customview.NoAnimationViewPager
        android:id="@+id/seckill_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/view_line">

    </com.ainisi.queenmirror.queenmirrorcduan.utils.customview.NoAnimationViewPager>
</LinearLayout>