<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/et_shap"
    android:layout_marginBottom="@dimen/comment_0.5_dip"
    android:layout_height="@dimen/comment_97_dip"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_97_dip">
        <ImageView
            android:id="@+id/iv_mine_fllow_logo"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_width="@dimen/comment_82_dip"
            android:layout_height="@dimen/comment_82_dip"
            android:scaleType="center"
            android:src="@drawable/dismiss"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_70_dip"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/foot_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/comment_20_dip"
                android:gravity="bottom"
                android:textSize="@dimen/comment_14_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_30_dip"
                android:gravity="center|left">

                <com.ainisi.queenmirror.queenmirrorcduan.utils.CustomRatingBar
                    android:id="@+id/score_mine_foot_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mode="random"
                    app:ratingProgress="1"
                    app:starDistance="@dimen/comment_3_dip"
                    app:starEmpty="@mipmap/empty"
                    app:starFill="@mipmap/fill"
                    app:starNum="5"
                    app:starSize="@dimen/comment_10_dip"
                    app:touchAble="false" />
                <TextView
                    android:id="@+id/tv_mine_follow_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/comment_12_size"
                    android:layout_marginLeft="@dimen/comment_5_dip"
                    android:text="1" />

            </LinearLayout>
            <TextView
                android:id="@+id/sort_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/comment_20_dip"
                android:gravity="bottom"
                android:text="营业时间：9:00~20:00"
                android:textSize="@dimen/comment_12_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/sort_distance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_70_dip"
            android:layout_marginRight="@dimen/comment_10_dip"
            android:gravity="right|bottom"
            android:textSize="@dimen/comment_14_size" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_2_dip"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:background="#4DC6C4C4" />
</LinearLayout>