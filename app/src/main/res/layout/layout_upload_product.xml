<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/recycler_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_90_dip"
        android:layout_below="@id/view_one">


        <ImageView
            android:id="@+id/iv_purchase_title"
            android:layout_width="@dimen/comment_70_dip"
            android:layout_height="@dimen/comment_70_dip"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/comment_22_dip"
            android:scaleType="center"
            app:srcCompat="@drawable/dismiss" />

        <TextView
            android:id="@+id/tv_purchase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:maxLines="1"
            android:text="name"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:textSize="@dimen/comment_14_size"
            />

        <TextView
            android:id="@+id/tv_purchase_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="女王会员立减：¥0.00"
            android:layout_below="@id/tv_purchase_name"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:textSize="@dimen/comment_12_size"
            android:textColor="@color/third_login"
            />
        <LinearLayout
            android:id="@+id/li_tejia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_purchase_discount"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_purchase_bean_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_10_dip"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:text="所需魔豆：0"
                android:textSize="@dimen/comment_12_size"
                android:textColor="@color/third_login"
                />

            <TextView
                android:id="@+id/buy_workroom_only_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_20_dip"
                android:text="限购一次"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@color/color_FF374F"
                android:textColor="@color/white"
                android:textSize="@dimen/comment_10_size">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_purchase_presentprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/li_tejia"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_toRightOf="@id/iv_purchase_title"
            android:text="¥138"
            android:textStyle="bold"
            android:textColor="@color/gray_E7370C"
            android:textSize="@dimen/comment_15_size" />

        <TextView
            android:id="@+id/tv_purchase_originalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/li_tejia"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/tv_purchase_presentprice"
            android:text="¥138"
            android:textSize="@dimen/comment_12_size" />

        <TextView
            android:id="@+id/tv_purchase_adapter_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_purchase_name"
            android:layout_marginEnd="@dimen/comment_20_dip"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:text="X1"
            android:textSize="@dimen/comment_16_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_two"
        style="@style/dash_line"
        android:layout_below="@id/recycler_one"
        android:layout_marginEnd="@dimen/comment_22_dip"
        android:layout_marginStart="@dimen/comment_22_dip"
        android:layout_marginTop="@dimen/comment_13_dip" />


</LinearLayout>
