<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/li_special_full"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_special_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/dismiss">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_F5BF6B"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特惠价："
            android:layout_marginStart="@dimen/comment_15_dip"
            android:layout_gravity="bottom"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/tv_special_speprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="136"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textSize="@dimen/comment_18_size"
            android:textColor="@color/third_login">
        </TextView>

        <TextView
            android:id="@+id/tv_special_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原价：868"
            android:layout_gravity="bottom"
            android:textSize="@dimen/comment_10_size"
            android:layout_marginStart="10dp"
            android:textColor="@color/special_list_item_first">
        </TextView>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_special_buynow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即购买"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/comment_14_size"
                android:background="@drawable/special_list_item"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/third_login">
            </TextView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
