<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/comment_70_dip">
        <TextView
            android:layout_marginTop="@dimen/comment_15_dip"
            android:id="@+id/tv_modou_bean_title_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/comment_14_size"
            android:textColor="@color/black"
            android:text="推荐好友消费提成"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/tv_modou_bean_time"
            android:layout_below="@id/tv_modou_bean_title_category"
            android:layout_width="wrap_content"
            android:textSize="@dimen/comment_14_size"
            android:layout_marginTop="@dimen/comment_5_dip"
            android:layout_marginStart="@dimen/comment_15_dip"
            android:layout_height="wrap_content"
            android:textColor="@color/alpha_35_black"
            android:text="2018-07-05  16:05:51"
            />

        <TextView
            android:id="@+id/iv_modou_bean_numbre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="+50"/>
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mine_back_gray">
    </View>
</LinearLayout>