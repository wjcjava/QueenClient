<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/comment_40_dip"
        android:layout_height="@dimen/comment_40_dip"
        android:layout_marginLeft="@dimen/comment_15_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_marginBottom="@dimen/comment_15_dip"
        android:src="@drawable/icon_mine_homepager" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image"

        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_like_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_15_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fans_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comment_10_dip"
                android:layout_toRightOf="@id/profile_image"
                android:text="嘤嘤嘤嘤嘤嘤" />

            <TextView
                android:id="@+id/tv_like_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/comment_10_dip"
                android:layout_toRightOf="@id/profile_image"
                android:text="喜欢了你的 视频"
                android:textColor="@color/text_like" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_like_content"
            android:layout_marginLeft="@dimen/comment_10_dip"
            android:layout_marginTop="@dimen/comment_20_dip"
            android:layout_marginBottom="@dimen/comment_10_dip"
            android:text="2018年10月26日11:12:56"
            android:textColor="@color/text_like"
            android:textSize="@dimen/comment_12_size"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/comment_15_dip"
        android:src="@drawable/icon_mine_homepager" />
</RelativeLayout>
