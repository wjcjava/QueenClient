<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/comment_30_dip"
        android:layout_height="@dimen/comment_30_dip"
        android:layout_marginLeft="@dimen/comment_15_dip"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_marginBottom="@dimen/comment_15_dip"
        android:src="@drawable/icon_mine_homepager" />

    <TextView
        android:id="@+id/tv_fans_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/comment_10_dip"
        android:layout_toRightOf="@id/profile_image"
        android:text="请叫大女王人" />

    <CheckBox
        android:id="@+id/cb_focus"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        style="@style/CustomCheckboxFocusTheme"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/comment_15_dip" />

</RelativeLayout>
