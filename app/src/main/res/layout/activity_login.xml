<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_bac"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tranparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/comment_27_dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机登录"
                    android:textColor="@color/order_number"
                    android:textSize="@dimen/comment_20_size"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/comment_20_dip"
                    android:layout_marginLeft="@dimen/comment_20_dip"
                    android:layout_marginRight="@dimen/comment_20_dip"
                    android:background="@color/grey_color1"/>

                <TextView
                    android:id="@+id/login_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码登录"
                    android:textColor="@color/grey_color1"
                    android:textSize="@dimen/comment_20_size"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/comment_30_dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/grey_color1"
                    android:textSize="@dimen/comment_16_size"/>

                <EditText
                    android:id="@+id/et_login_pghone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comment_5_dip"
                    android:layout_marginBottom="@dimen/comment_5_dip"
                    android:background="@color/tranparent"
                    android:gravity="center|left"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingTop="@dimen/comment_10_dip"
                    android:paddingBottom="@dimen/comment_10_dip"
                    android:textColor="@color/grey_color1"
                    android:textColorHint="@color/grey_color3"
                    android:textSize="@dimen/comment_15_size"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comment_1_dip"
                    android:background="@color/color_C9C9C9"/>

                <LinearLayout
                    android:id="@+id/login_psd_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_20_dip"
                        android:text="密    码"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/comment_16_size"/>

                    <EditText
                        android:id="@+id/et_login_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_5_dip"
                        android:layout_marginBottom="@dimen/comment_5_dip"
                        android:background="@color/tranparent"
                        android:gravity="center|left"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:maxLength="16"
                        android:paddingTop="@dimen/comment_10_dip"
                        android:paddingBottom="@dimen/comment_10_dip"
                        android:textColor="@color/grey_color1"
                        android:textColorHint="@color/grey_color3"
                        android:textSize="@dimen/comment_15_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_phone_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_20_dip"
                        android:text="验证码"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/comment_16_size"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_5_dip"
                        android:layout_marginBottom="@dimen/comment_5_dip"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tranparent"
                            android:gravity="center|left"
                            android:hint="请输入验证码"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/grey_color1"
                            android:textColorHint="@color/grey_color3"
                            android:textSize="@dimen/comment_15_size"/>

                        <TextView
                            android:id="@+id/tv_validation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_register_red"
                            android:gravity="center"
                            android:paddingLeft="@dimen/comment_10_dip"
                            android:paddingTop="@dimen/comment_5_dip"
                            android:paddingRight="@dimen/comment_10_dip"
                            android:paddingBottom="@dimen/comment_5_dip"
                            android:text="获取验证码"
                            android:textColor="@color/color_FE2F2F"
                            android:textSize="@dimen/comment_13_size"/>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comment_1_dip"
                    android:background="@color/color_C9C9C9"/>

                <LinearLayout
                    android:id="@+id/re_graphics_validation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_20_dip"
                        android:text="图形验证码"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/comment_16_size"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/comment_5_dip"
                        android:layout_marginBottom="@dimen/comment_5_dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_graphics_validation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/tranparent"
                            android:gravity="center|left"
                            android:hint="请输入图形验证码"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/grey_color1"
                            android:textColorHint="@color/grey_color3"
                            android:textSize="@dimen/comment_15_size"/>

                        <ImageView
                            android:id="@+id/iv_graphics_validation"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/comment_1_dip"
                        android:background="@color/color_C9C9C9"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comment_15_dip">

                    <CheckBox
                        android:id="@+id/check_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox_style"
                        android:checked="true"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/check_choice"
                        android:textSize="@dimen/comment_13_size"/>

                    <TextView
                        android:id="@+id/tv_forgetcipher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="忘记密码"
                        android:textColor="@color/grey_color1"
                        android:textSize="13sp"
                        />
                </RelativeLayout>

                <Button
                    android:id="@+id/bt_login_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comment_44_dip"
                    android:layout_marginTop="@dimen/comment_40_dip"
                    android:background="@mipmap/register_btn"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/comment_16_size"
                    />
            </LinearLayout>

            <include layout="@layout/activity_login_mine"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
