<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_video"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="40dp"
        android:layout_margin="@dimen/comment_15_dip"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
      />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_margin="@dimen/comment_15_dip"
        android:layout_toRightOf="@id/iv_video_cover"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_text_color"
                android:textSize="@dimen/comment_14_size" />
            <TextView
                android:id="@+id/tv_video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/search_text_color"
                android:textSize="@dimen/comment_14_size" />

        </RelativeLayout>



        <TextView
            android:id="@+id/tv_buy_time"
            android:layout_marginTop="@dimen/comment_14_dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/search_text_color"
            android:textSize="@dimen/comment_12_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_video_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/comment_15_dip"
        android:layout_centerVertical="true"
        android:textColor="@color/search_text_color"
        android:textSize="@dimen/comment_14_size" />


</RelativeLayout>

