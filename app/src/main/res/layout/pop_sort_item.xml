<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.ainisi.queenmirror.queenmirrorcduan.utils.NoScrollGridView
        android:id="@+id/pop_sort_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:numColumns="4"
        android:paddingBottom="@dimen/comment_15_dip"
        android:paddingTop="@dimen/comment_15_dip"
        android:verticalSpacing="@dimen/comment_15_dip"/>

    <View
        android:id="@+id/pop_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/black"
        />
</LinearLayout>