<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_48_dip"
            android:text="该手机号已经注册"
            android:textColor="@color/grey_color1"
            android:textSize="@dimen/comment_14_size"/>

        <TextView
            android:id="@+id/dialog_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_40_dip"
            android:layout_marginBottom="@dimen/comment_17_dip"
            android:background="@drawable/shape_register_redbtn"
            android:gravity="center"
            android:paddingLeft="@dimen/comment_45_dip"
            android:paddingTop="@dimen/comment_5_dip"
            android:paddingRight="@dimen/comment_45_dip"
            android:paddingBottom="@dimen/comment_5_dip"
            android:text="去登录"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_12_size"/>
    </LinearLayout>
</LinearLayout>