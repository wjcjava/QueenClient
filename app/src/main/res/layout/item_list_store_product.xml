<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_goods_item"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginRight="20dp"
        android:focusableInTouchMode="false"
        android:orientation="horizontal">
        <!--android:layout_marginLeft="@dimen/common_20_dip"-->
        <!--android:layout_marginTop="@dimen/common_20_dip"-->

        <ImageView
            android:id="@+id/iv_goods_pic"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginLeft="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                >

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/red_phone" />

                <TextView
                    android:id="@+id/tv_product_introduce"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_product_name"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_product_state"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:visibility="invisible"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_phone"
                    android:layout_below="@id/tv_product_price"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shelf_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="@color/red_phone" />

                <TextView
                    android:id="@+id/tv_refuse_reason"
                    android:layout_width="wrap_content"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:text="查看详情"
                    android:textColor="@color/text_color" />

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>