<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/combin_rl"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/combin_add"
        android:layout_width="@dimen/comment_10_dip"
        android:layout_height="@dimen/comment_10_dip"
        android:layout_gravity="center"
        android:layout_margin="@dimen/comment_10_dip"
        android:src="@drawable/add"/>

    <RelativeLayout
        android:layout_width="@dimen/comment_100_dip"
        android:layout_height="@dimen/comment_100_dip">

        <ImageView
            android:id="@+id/combin_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_20_dip"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:background="@color/color_FF3428"/>

        <TextView
            android:id="@+id/combin_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_20_dip"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/comment_12_size"/>
    </RelativeLayout>
</LinearLayout>