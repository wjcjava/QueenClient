<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mine_back_gray"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_near_list_fujin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="附近商家>"
            android:textColor="@color/alpha_violet"
            android:textSize="@dimen/comment_14_size"
            android:padding="10dp"
            android:gravity="center_horizontal">
        </TextView>

        <TextView
            android:id="@+id/tv_near_list_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="其他区域>"
            android:textColor="@color/alpha_75_black"
            android:textSize="@dimen/comment_14_size"
            android:padding="10dp"
            android:gravity="center_horizontal">
        </TextView>

    </LinearLayout>
    <View android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/mine_back_gray">
    </View>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ListView
            android:id="@+id/rv_nearlist_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        </ListView>

    </RelativeLayout>
</LinearLayout>
