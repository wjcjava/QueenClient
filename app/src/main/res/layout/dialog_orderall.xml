<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_orderall_cancel"
            android:layout_width="@dimen/comment_20_dip"
            android:layout_height="@dimen/comment_20_dip"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/dialog_orderall_rl"
            android:src="@mipmap/cancel_white"/>

        <RelativeLayout
            android:id="@+id/dialog_orderall_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_orderall_cancel"
            android:layout_margin="@dimen/comment_10_dip"
            android:background="@drawable/shape_home_white">

            <ImageView
                android:id="@+id/dialog_orderall_img"
                android:layout_width="@dimen/comment_240_dip"
                android:layout_height="@dimen/comment_240_dip"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/shape_home_white"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>