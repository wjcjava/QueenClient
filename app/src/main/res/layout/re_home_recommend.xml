<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@color/tranparent"
    android:fitsSystemWindows="true"
    android:paddingStart="@dimen/comment_2_dip"
    android:paddingTop="@dimen/comment_5_dip"
    android:paddingEnd="@dimen/comment_2_dip"
    android:paddingBottom="@dimen/comment_5_dip">

    <LinearLayout
        android:layout_width="@dimen/comment_0_dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/et_shap"
        android:orientation="vertical"
        android:paddingBottom="@dimen/comment_5_dip">

        <RelativeLayout
            android:id="@+id/rl_homepage_image"
            android:layout_width="@dimen/comment_100_dip"
            android:layout_height="@dimen/comment_90_dip">

            <ImageView
                android:id="@+id/iv_commodity_picture"
                android:layout_width="@dimen/comment_100_dip"
                android:layout_height="@dimen/comment_90_dip"
                android:layout_marginStart="@dimen/comment_15_dip"
                android:layout_marginTop="@dimen/comment_10_dip"
                android:layout_marginEnd="@dimen/comment_12_dip"
                android:scaleType="center"
                app:srcCompat="@drawable/dismiss"/>

            <ImageView

                android:id="@+id/iv_homepage_queen"
                android:layout_width="@dimen/comment_40_dip"
                android:layout_height="@dimen/comment_40_dip"
                android:layout_marginStart="@dimen/comment_15_dip"
                android:layout_marginTop="10dp"
                android:src="@drawable/homepage_queen">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_12_size"/>

        <TextView
            android:id="@+id/iv_queen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            android:singleLine="true"
            android:textSize="@dimen/comment_8_size"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_xingxing"
            android:layout_width="@dimen/comment_50_dip"
            android:layout_height="@dimen/comment_10_dip"
            android:layout_marginStart="@dimen/comment_11_dip"
            android:layout_marginTop="@dimen/comment_3_dip"
            app:srcCompat="@drawable/ic_sortrecyke_stars"/>
    </LinearLayout>
</LinearLayout>