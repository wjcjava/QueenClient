<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_1_dip"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/comment_63_dip"
            android:layout_marginEnd="@dimen/comment_10_dip"
            android:layout_weight="1"
            android:background="@color/alpha_15_black"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/di_san_fang_login"
            android:textColor="@color/black"
            android:textSize="@dimen/comment_12_size"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/comment_1_dip"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/comment_10_dip"
            android:layout_marginEnd="@dimen/comment_63_dip"
            android:layout_weight="1"
            android:background="@color/alpha_15_black"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_reg_wechat_login_view"
            android:layout_width="@dimen/comment_45_dip"
            android:layout_height="@dimen/comment_45_dip"
            android:src="@mipmap/weixin"/>

        <ImageView
            android:id="@+id/user_reg_qq_login_view"
            android:layout_width="@dimen/comment_45_dip"
            android:layout_height="@dimen/comment_45_dip"
            android:layout_marginLeft="@dimen/comment_35_dip"
            android:src="@mipmap/qq"/>

        <ImageView
            android:id="@+id/user_reg_weibo_login_view"
            android:layout_width="@dimen/comment_45_dip"
            android:layout_height="@dimen/comment_45_dip"
            android:layout_marginLeft="@dimen/comment_35_dip"
            android:src="@mipmap/weibo"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>