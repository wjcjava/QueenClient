<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_48_dip"
                android:background="@color/white">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/comment_10_dip"
        android:paddingRight="@dimen/comment_10_dip"
        android:paddingStart="@dimen/comment_10_dip"
        android:paddingTop="@dimen/comment_10_dip"
        android:src="@mipmap/icon_back"/>

    <ImageView
        android:id="@+id/title_photo"
        android:layout_width="@dimen/comment_13_dip"
        android:layout_height="@dimen/comment_15_dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/comment_15_dip"
        android:src="@drawable/icon_full_fenxiang"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/title_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="30dp"
        android:layout_toRightOf="@id/title_back"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_16_size"
        tools:ignore="EllipsizeMaxLines"/>


    <ImageView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/comment_10_dip"
        android:enabled="true"
        android:textSize="@dimen/comment_16_size"/>
</RelativeLayout>