<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_full_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_10_dip"
                android:layout_marginEnd="@dimen/comment_6_dip"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_shop_title"
        android:layout_width="@dimen/comment_150_dip"
        android:layout_height="@dimen/comment_150_dip"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/icon_home_beautiful"/>

    <TextView
        android:id="@+id/sote_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_shop_title"
        android:layout_marginTop="@dimen/comment_17_dip"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="MOCO美容美发沙龙"
        android:textColor="@color/home_bottom_radio_text"
        android:textSize="@dimen/comment_15_size"/>

    <TextView
        android:id="@+id/tv_full_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sote_name"
        android:layout_marginTop="@dimen/comment_2_dip"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="苏州园区精致美甲店"
        android:textColor="@color/color_565656"
        android:textSize="@dimen/comment_12_size"/>

    <TextView
        android:id="@+id/tv_full_evaluate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_full_introduction"
        android:layout_marginTop="@dimen/comment_2_dip"
        android:layout_marginEnd="10dp"
        android:textColor="@color/color_FF5E5E"
        android:textSize="@dimen/comment_11_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_full_evaluate"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sort_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="¥ 138"
            android:textColor="@color/color5"
            android:textSize="@dimen/comment_18_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_goods_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/comment_16_dip"
            android:includeFontPadding="false"
            android:text="¥268"
            android:textColor="@color/color_DDDDDD"
            android:textSize="@dimen/comment_14_size"/>
    </LinearLayout>
</RelativeLayout>