<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@color/mine_back_gray">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/layout_title"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_queen">
        </ImageView>
        <TextView
            android:id="@+id/tv_banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/alpha_95_black"
            android:textSize="@dimen/comment_16_size"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_about_xieyi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="协议及声明"
        android:textStyle="normal"
        android:textSize="@dimen/comment_14_size"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_centerHorizontal="true">
    </TextView>


</RelativeLayout>
